/*
 * Allwinner Technology CO., Ltd. sun50iw1p1 fpga board.
 *
 * fpga board support.
 */

/dts-v1/;

#include "sun50iw1p1.dtsi"

/{
	soc@01c00000 {
		twi2: twi@0x01c2b400 {
			status = "okay";
			ac108@3b{
				compatible = "Allwinnertech,MicArray_0";
				reg = <0x3b>;
				debug_mode = <0>;
				pga_gain = <0x32>;
				ref_pga_gain = <0x08>;
				twi_bus = <2>;
				regulator_used = <1>;
				voltage_enable = "vcc-audio18";
				codec_mic_used = <0x1>;
				pa_double_used = <0x0>;
				ref_channel_num = <0x3>;
				ref_chip_addr = <0x3b>;
				slot_width = <0x18>;
				power_vol = <1800000>;
				gpio-power = <&r_pio PL 9 1 1 1 1>;
			};
			touchscreen0: atmel_ctp@4A {
				compatible = "atmel,mXT224";
				reg = <0x4A>;
				atmel,suspend_mode = <0>;
			};
			touchscreen1: sitronix@70 {
				compatible = "sitronix,st1633i";
				reg = <0x70>;
			};
		};
		twi1: twi@0x01c2b000{
			status = "okay";
			stk3310@48{
				compatible = "STK3310";
				stk3310_gpio-gpios = <&pio PB 9 6 1 1 1>;
				reg = <0x48>;
			};
			max44009@4a{
				compatible = "maxim,max44009";
				max44009_gpio-gpios = <&pio PB 9 6 1 1 1>;
				reg = <0x4a>;
			};
			tmp103@70{
				compatible = "TMP 103";
				reg = <0x70>;
			};
		};
		snddaudio0:sound@1 {
			sunxi,snddaudio-codec = "ac108.2-003b";
			sunxi,snddaudio-codec-dai = "ac108-pcm0";
		};
		keyboard0:keyboard {
			key_cnt = <3>;
			key0 = <191 115>;
			key1 = <391 114>;
			key2 = <600 542>;
		};
	};
	wlan:wlan {
		compatible = "allwinner,sunxi-wlan";
		wlan_power = "vcc-wifi";
		wlan_io_regulator = "vcc-wifi-io";
		wlan_busnum = <1>;
		wlan_regon = <&r_pio PL 2 1 1 1 0>;
		wlan_hostwake = <&r_pio PL 3 6 0 0 0>;
		status = "okay";
	};

	bt:bt {
		compatible = "allwinner,sunxi-bt";
		bt_power = "vcc-wifi";
		bt_io_regulator = "vcc-wifi-io";
		bt_rst_n = <&r_pio PL 4 1 1 1 0>;
		status = "okay";
	};

	btlpm:btlpm {
		compatible = "allwinner,sunxi-btlpm";
		uart_index = <1>;
		bt_wake = <&r_pio PL 6 1 1 1 1>;
		bt_hostwake = <&r_pio PL 5 6 0 0 0>;
		status = "okay";
	};
};
